  <TypeDefinitions>
    <EntityTypes>
      <ClassTypes>
        <ClassType ID="F12.FTPMonitoring.AppServer" Base="Windows!Microsoft.Windows.ComputerRole" Accessibility="Public" Abstract="false" Hosted="true" Singleton="false">
          <Property ID="FTPPath" Key="false" Type="string" />
